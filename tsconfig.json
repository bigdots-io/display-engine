{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "outDir": "lib/esm",
    "declaration": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*"]
}
